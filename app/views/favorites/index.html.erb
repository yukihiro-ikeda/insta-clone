<h1>お気に入り一覧</h1>

<table>
  <thead>
    <tr>
      <th>Content</th>
      <th>Image</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @favorite.each do |favorite| %>
      <tr>
      <td><%= favorite.picture.content unless favorite.picture.content == nil %></td>
      <td><%= image_tag favorite.picture.image.url, size: '300x200' unless favorite.picture.image == nil %></td>
      <td><%= favorite.picture.user.name unless favorite.picture.user.name == nil  %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to '投稿一覧', pictures_path %>